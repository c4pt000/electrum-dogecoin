#:import VERSION electrum.version.ELECTRUM_VERSION

Popup:
    title: _("About Electrum-NMC")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "GNU GPLv3+ Licence for Electrum-DOGE components; CC BY 4.0 for Namecoin logo, MIT Licence for all other components"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://www.namecoin.org/[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://www.namecoin.org/")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['Jeremy Rand', 'Ahmed Bodiwala'])
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by The Namecoin Project')
            padding: '0dp', '20dp'
        TopLabel:
            text: _('Based on Electrum-DOGE:')
            padding: '0dp', '20dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "GNU GPLv3+ Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://github.com/electrumalt/electrum-doge[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://github.com/electrumalt/electrum-doge")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['xilanma'])
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by electrumalt')
            padding: '0dp', '20dp'
        TopLabel:
            text: _('Based on Electrum:')
            padding: '0dp', '20dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://electrum.org[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://electrum.org")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['Thomas Voegtlin', 'SomberNight'])
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by Electrum Technologies GmbH')
            padding: '0dp', '20dp'
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
